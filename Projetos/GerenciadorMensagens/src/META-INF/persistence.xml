<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="GerenciadorMensagensPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.edu.ifnmg.DomainModel.Configuracao</class>
    <class>br.edu.ifnmg.DomainModel.Log</class>
    <class>br.edu.ifnmg.DomainModel.Mensagem</class>
    <class>br.edu.ifnmg.DomainModel.Pessoa</class>
    <class>br.edu.ifnmg.DomainModel.Permissao</class>
    <class>br.edu.ifnmg.DomainModel.Perfil</class>
    <class>br.edu.ifnmg.DomainModel.MensagemPerfil</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/GerenciamentoEventos?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
